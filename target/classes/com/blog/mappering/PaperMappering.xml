<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.dao.ArticleDao">
	<insert id="insertPaper" parameterType="article">
		insert into article(name,author,content,createtime) values(#{name},#{author},#{content},#{createtime});
	</insert>
	<select id="getPapers" resultType="article" >
		select id,name,author,createtime,content from article where author=#{author} limit #{begin},#{length}
	</select>
</mapper>